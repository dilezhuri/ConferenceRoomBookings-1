@model IEnumerable<ConferenceRoomBookings.Models.ConferenceRoomModel>

@{
    ViewData["Title"] = "Index";
}

<h1>ConferenceRoom</h1>

<p>
    <a asp-action="Create">Create</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CodeRoom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaximumCapacity)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CodeRoom)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MaximumCapacity)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
